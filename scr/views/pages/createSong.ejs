<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <div class="web-register">
      <header class="header">
        <%- include('../partials/header'); %>
        <link rel="stylesheet" href="/stylesheets/register.css" />
      </header>

      <main class="container">
        <section class="one">
          <h1 class="one_signup">Add your song here</h1>
          <form action="/user/store" method="post" class="one_form" id="one_form">
            <div class="form-group">
              <label for="artist" class="form-label">Artist</label>
              <input
                type="text"
                name="artist"
                id="artist"
                placeholder="Search artist..."
                class="form-control"
                oninput="selector()"
              />
              <div style="display: none" id="selector" class="create-selector"></div>
            </div>

            <div class="form-group">
              <label for="genre" class="form-label">Genre</label>
              <input
                id="genre"
                name="genre"
                type="text"
                placeholder="kjndv"
                class="form-control"
              />
            </div>

            <div class="form-group">
              <label for="song" class="form-label">Song</label>
              <input
                id="song"
                name="song"
                type="text"
                placeholder="kjndv"
                class="form-control"
              />
            </div>

            <button id="submit-button" class="form-submit" type="submit">Create</button>
          </form>
          <div>
            <a href="/user/createArtist"
              >If you do not select your Artist, click here</a
            >
          </div>
        </section>
      </main>

